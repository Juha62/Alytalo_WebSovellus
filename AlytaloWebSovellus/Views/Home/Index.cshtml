@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</div>


@* Valojen asetukset *@

<div class="btn group btn-group-vertical btn-lg">

        <h4>Talon valot</h4>
        <a href="/TalonValots" class="btn btn-default">Valot tietokantaan</a>

        <div id="Valot">
        <div id="Valot1"></div>
        <div id="Valot2"></div>
        <div id="Valot3"></div>
        <div id="Valot4"></div>
        <div id="Valot5"></div>
    </div>

    <button onclick="Move" class="btn btn-default" style="width:140px;">Himmeä</button>
    <button onclick="Move2" class="btn btn-default" style="width:140px;">Normaali</button>
    <button onclick="Move3" class="btn btn-default" style="width:140px;">Kirkas</button>
    <button onclick="Move4" class="btn btn-default" style="width:140px;">Off</button>   
    </div>


@* Saunan asetukset *@

<div class="btn group btn-group-vertical btn-lg">
  
        <h4>Talon saunat</h4>
        <a href="/TalonSaunats" class="btn btn-default" style="width:140px;">Sauna tietokantaan</a>
   
    <button onclick="StartCount()" class="btn btn-default" style="width:140px;">Sauna On</button>
    <button onclick="StopCount()" class="btn btn-default" style="width:140px;">Sauna Off</button>
    

    <input type="text" id="Saunan lämpötila" style="width:50px;"> &deg;C
    <input type="text" id="Saunan tavoite lämpötila" style="width:50px;" value="83"> &deg;C
    </div>

@* Lämmön asetukset *@

<div class="btn group btn-group-vertical btn-lg">
   
        <h4>Talon lämmmöt</h4>
        <a href="/TalonLammots" class="btn btn-default" style="width:140px;">Lämpö tietokantaan</a>
  

    <button onclick="StarWarming()" class="btn btn-default" style="width:140px;">Huone</button>

    <input type="text" id="Huoneen lämpötila" style="width:50px;"> &deg;C
    <input type="text" id="Huoneen tavoite lämpötila" style="width:50px;" value="20"> &deg;C
</div>